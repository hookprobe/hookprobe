[Unit]
Description=Guardian SSID Health Check
Documentation=https://hookprobe.com/docs/guardian
After=network.target hostapd.service
Wants=hostapd.service

[Service]
Type=oneshot
ExecStart=/usr/local/bin/guardian-ssid-health.sh
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
